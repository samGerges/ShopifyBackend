
<h1>Edit Inventory</h1>
<h3>Item ID# <%= item._id %></h3>
<form action="/inventory/edit?id=<%=item._id%>" method="post">
    <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input class="form-control" type="text" name="name" value="<%=  item.name %>">
    </div>
    
    <div class="mb-3">
        <label class="form-label" for="amount">Amount</label>
        <input class="form-control" type="number" name="amount" value="<%=item.amount%>"> 
    </div>
    
    <div class="mb-3">
        <input class="btn btn-primary" type="submit" value="Submit">
    </div>
</form>

<button class="btn btn-primary"  onclick=deleteItem()>DELETE</button>

<script>

    var url = "/inventory/edit/delete?id=<%= item._id %>";

    function deleteItem(){
        if(confirm("Are you sure you want to delete it? Won't be able to undo change!")){
            
            location.href = url

        }
    }
</script>